[merge]
	conflictstyle = zdiff3
[push]
	autoSetupRemote = true
[rerere]
	enabled = true
[core]
	pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
[diff]
	algorithm = histogram
  colorMoved = default
[gpg]
  program = gpg
[includeif "hasconfig:remote.*.url:git@github.com:*/**"]
  path = ~/.gitconfig-github
[includeif "hasconfig:remote.*.url:git@gitlab.com:*/**"]
  path = ~/.gitconfig-gitlab
